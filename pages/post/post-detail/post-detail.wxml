<view class="container-detail">
  <image class='head-image' src='{{postData.headImg}}'></image>
  <image class='audio' src='../../../assets/images/start.jpg'></image>
  <view class='author-date'>
    <image class='author-img' src='{{postData.headImg}}'></image>
    <text class='author'>{{postData.author}}</text>
    <text class='const-text'>发表于</text>
    <text class='date'>{{postData.dateTime}}</text>
  </view>
  <text class='title'>{{postData.title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image catchtap='onFavorite' src='../../../assets/images/favorite.png'></image>
      <image catchtap='onShare' class='share-img' src='../../../assets/images/share.png'></image>
    </view>
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{postData.detailTxt}}</text>
</view>